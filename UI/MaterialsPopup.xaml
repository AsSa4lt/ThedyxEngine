<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="ThedyxEngine.UI.MaterialsPopup">
    <toolkit:Popup.Content>
        <HorizontalStackLayout>
            <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="White"
                                 WidthRequest="150" HeightRequest="-1"
                                 HorizontalOptions="Center" VerticalOptions="Center">
            </VerticalStackLayout>
            
            <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="White"
                                 WidthRequest="150" HeightRequest="-1"
                                 HorizontalOptions="Center" VerticalOptions="Center">
                <HorizontalStackLayout>
                    <Label VerticalOptions="Center" WidthRequest="-1" Text="Name:" HorizontalOptions="Start" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                    <Frame VerticalOptions="Center" BackgroundColor="Transparent" BorderColor="Transparent" CornerRadius="5" Padding="2" HasShadow="False" HeightRequest="30">
                        <Entry x:Name="Name" TextColor="Black" BackgroundColor="Transparent" Completed="OnNameCompleted"/>
                    </Frame>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </toolkit:Popup.Content>
</toolkit:Popup>
