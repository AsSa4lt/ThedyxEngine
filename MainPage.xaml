<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ui="clr-namespace:ThedyxEngine.UI"
             x:Class="ThedyxEngine.MainPage"
             Title="ThedyxEngine">

    <!-- Main Grid with two rows and three columns that fill the entire screen -->
    <Grid RowDefinitions="30,*"
          ColumnDefinitions="Auto,*"
          HorizontalOptions="FillAndExpand"
          VerticalOptions="FillAndExpand"
          MinimumWidthRequest="600"
          MinimumHeightRequest="400">

        <!-- Placeholder for Top Panel -->
        <BoxView Grid.Row="0" Grid.ColumnSpan="3" BackgroundColor="LightGray"
                 HorizontalOptions="FillAndExpand" VerticalOptions="Fill" />

        <!-- Main content area with three columns: list, canvas, properties -->
        <Grid Grid.Row="1" ColumnDefinitions="200,*,200"
              HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            <ui:EngineObjectsList x:Name="_engineObjectsList" Grid.Column="0" WidthRequest="200">
                <!-- Binding logic will go here -->
            </ui:EngineObjectsList>
            
            <ui:EngineTabProperties x:Name="_engineTabProperties" Grid.Column="3" WidthRequest="200" ></ui:EngineTabProperties>
           
        </Grid>
    </Grid>
</ContentPage>